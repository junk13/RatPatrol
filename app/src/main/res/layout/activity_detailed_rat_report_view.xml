<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pizzarat.cs2340.gatech.edu.ratpatrol.DetailedRatReportViewActivity">

    <RelativeLayout
        android:layout_width="412dp"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <EditText
            android:id="@+id/keyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/addressTextView"
            android:layout_marginTop="31dp"
            android:ems="10"
            android:inputType="none"
            android:text="Key: "/>

        <EditText
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/keyTextView"
            android:layout_below="@+id/keyTextView"
            android:ems="10"
            android:inputType="none|date"
            android:text="Date:"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"/>

        <EditText
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dateTextView"
            android:layout_below="@+id/dateTextView"
            android:ems="10"
            android:inputType="none|time"
            android:text="Time:"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="40dp"/>

        <EditText
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timeTextView"
            android:layout_marginStart="39dp"
            android:ems="10"
            android:inputType="none|textPostalAddress"
            android:text="Address:"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="116dp"/>

        <EditText
            android:id="@+id/cityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/addressTextView"
            android:layout_below="@+id/addressTextView"
            android:ems="10"
            android:inputType="none|textPersonName"
            android:text="City:"/>

        <EditText
            android:id="@+id/zipcodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cityTextView"
            android:layout_below="@+id/cityTextView"
            android:ems="10"
            android:inputType="none|textPersonName"
            android:text="Zipcode:"/>

        <EditText
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/boroughTextView"
            android:layout_below="@+id/boroughTextView"
            android:ems="10"
            android:inputType="none|textPersonName"
            android:text="Latitude and Longitude:"/>

        <EditText
            android:id="@+id/boroughTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/zipcodeTextView"
            android:layout_below="@+id/zipcodeTextView"
            android:ems="10"
            android:inputType="none|textPersonName"
            android:text="Borough: "/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
