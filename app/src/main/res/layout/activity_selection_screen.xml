<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pizzarat.cs2340.gatech.edu.ratpatrol.SelectionScreenActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="407dp"
        android:layout_height="881dp"
        tools:layout_editor_absoluteX="-22dp"
        tools:layout_editor_absoluteY="-5dp">

        <Button
            android:id="@+id/ratArchiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rat Report Archive"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="21dp" />

        <Button
            android:id="@+id/ratMapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rat Sighting Map"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="219dp"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/ratArchiveButton"
            android:layout_alignStart="@+id/ratArchiveButton" />

        <Button
            android:id="@+id/createReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ratMapButton"
            android:layout_below="@+id/ratMapButton"
            android:layout_marginTop="28dp"
            android:text="Create a Report"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="135dp"/>

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="226dp"
            android:text="Logout"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="200dp"
            android:layout_below="@+id/createReportButton"
            android:layout_alignStart="@+id/createReportButton" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
