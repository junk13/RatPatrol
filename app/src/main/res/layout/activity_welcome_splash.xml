<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="pizzarat.cs2340.gatech.edu.ratpatrol.WelcomeSplashActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="top|center_vertical"
        android:text="@string/beware_of_rats"
        android:textAlignment="center"
        android:textColor="#f50606"
        android:textSize="60sp"
        android:textStyle="bold|italic"/>

    <ImageView
        android:id="@+id/rat_apocalypse"
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:contentDescription="Splash screen image"
        android:foregroundGravity="bottom|center_vertical"
        android:src="@drawable/ratapocalypse"/>


</RelativeLayout>
